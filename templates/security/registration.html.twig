{% extends 'base.html.twig' %}

{% block title %}Registration Form!{% endblock %}

{% block body %}
    <style>
        main{margin-top: 83px}
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <main role="main">
        <div class="example-wrapper">
            <h1>Inscription Sur le site ✅</h1>

            {{ form_start(form) }}

            {{ form_row(form.username , {
                'label' : "Nom d\'utilisateur",
                'attr': {'placeholder' : "Nom D'utilisateur"}
            }) }}

            {{ form_row(form.email, {
                'label' : "Adresse d\'utilisateur",
                'attr': {'placeholder' : "email@gmail.com"}
            }) }}

            {{ form_row(form.password, {
                'label' : "Mot de passe",
                'attr': {'placeholder' : "mot de passe"}
            })  }}

            {{ form_row(form.confirm_password, {
                'label' : "Confirmer mot de passe",
                'attr': {'placeholder' : "repeter mot de passe"}
            }) }}

            <button type="reset"  class="btn btn-danger">   Réinstaller</button>
            <button type="submit" class="btn btn-primary">  Inscription  </button>
            {{ form_end(form) }}

        </div>
    </main>

{% endblock %}
